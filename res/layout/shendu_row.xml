<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <QuickContactBadge
        android:id="@+id/rowBadge"
        android:layout_width="@dimen/shendu_call_log_list_contact_photo_size"
        android:layout_height="@dimen/shendu_call_log_list_contact_photo_size"
        android:layout_margin="8dip"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:maxWidth="200dp"
                android:textSize="18sp" 
                android:singleLine="true"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/rowPinyin"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="140dp"
                android:textColor="@color/shendu_secondary_text_color"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rowNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shendu_secondary_text_color"
                android:gravity="center_vertical" />
            <TextView 
                android:id="@+id/shendu_row_attribution"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shendu_secondary_text_color"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>